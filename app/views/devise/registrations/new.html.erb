<%= render "shared/second-header" %>

<div class="registration-main">
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">会員情報入力</h1>
    </div>
    <% if alert %>
      <div class="error-alert">
        <ul class="error-message">
          <li><%= alert %></li>
        </ul>
      </div>
    <% end %>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :nickname, "ニックネーム", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class: "input-default", id: "nickname", placeholder: "例) furima太郎", maxlength: 40, autofocus: true %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :email, "メールアドレス", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class: "input-default", id: "email", placeholder: "PC・携帯どちらでも可", maxlength: 40, autofocus: true %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :password, "パスワード", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class: "input-default", id: "password", placeholder: "６文字以上の半角英数字", maxlength: 40, autofocus: true %>
        <p class="info-text">※英字と数字の両方を含めて設定してください</p>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
          <%= f.password_field :password_confirmation, class: "input-default", id: "password-confirmation", placeholder: "同じパスワードを入力してください", maxlength: 40, autofocus: true %>
            <p class="form-info-header">本人確認</p>
            <p class="form-info-text">安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。</p>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :last_name, "お名前（姓）", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :last_name, class: "input-default", id: "last-name", placeholder: "例) 山田" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :first_name, "お名前（名）", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :first_name, class: "input-default", id: "first-name", placeholder: "例) 太郎" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :last_name_kana, "お名前カナ（姓）", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :last_name_kana, class: "input-default", id: "last-name-kana", placeholder: "例) ヤマダ" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :first_name_kana, "お名前カナ（名）", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :first_name_kana, class: "input-default", id: "first-name-kana", placeholder: "例) タロウ" %>
      </div>

      <div class="form-group">
        <div class="form-birth-wrap">
          <%= f.label :birth_date, "生年月日", class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
      <div class="input-birth-wrap">
          <div class="birth-select">
            <%= select_year(f.object.birth_date, { start_year: 1900, end_year: Date.today.year, prompt: '年' }, { name: "user[birth_date(1i)]" }) %>
          </div>

          <div class="birth-select">
            <%= select_tag "user[birth_date(2i)]", options_for_select((1..12).map { |m| ["#{m}月", m] }, f.object.birth_date&.month), prompt: '月', class: "select-box" %>
          </div>

          <div class="birth-select">
            <%= select_day(f.object.birth_date, { prompt: '日' }, { name: "user[birth_date(3i)]" }) %>
          </div>

      </div>
        <p class="info-text">※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
      <div class="form-group">
        <p class="form-bottom-text">
          「会員登録」のボタンを押すことにより、
          <span>利用規約</span>
          に同意したものとみなします
      </div>
    </div>

      <div class="actions register-btn">
        <%= f.submit "会員登録",class:"register-red-btn" %>
      </div>

      <p class="register-info">本人情報の確認について</p>
    <% end %>
  </div>
</div>

<%= render "shared/second-footer" %>
